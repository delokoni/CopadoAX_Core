<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>copado__Cancellation_reason_required</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
  TEXT(copado__Status__c)==&quot;Cancelled&quot;,
  ISBLANK(copado__Cancellation_Reason__c)
)</errorConditionFormula>
    <errorDisplayField>copado__Cancellation_Reason__c</errorDisplayField>
    <errorMessage>A cancellation reason must be given.</errorMessage>
</ValidationRule>
